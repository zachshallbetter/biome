{
  "name": "biome",
  "version": "1.0.0",
  "description": "A procedural generation engine for dynamic worlds with weather, growth, and physics systems",
  "main": "dist/app.js",
  "scripts": {
    "start": "npm run build && node dist/app.js",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "webpack --mode production",
    "dev": "concurrently \"npm run dev:engine\" \"npm run dev:client\"",
    "dev:engine": "cross-env TS_NODE_PROJECT=tsconfig.json nodemon",
    "dev:client": "webpack serve --mode development",
    "clean": "rimraf \"./dist\"",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"client/**/*.ts\"",
    "postinstall": "npm run build"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "ts-node ./src/app.ts"
  },
  "keywords": [
    "procedural-generation",
    "game-engine",
    "typescript",
    "physics",
    "weather-system"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "gl-matrix": "^3.4.3",
    "simplex-noise": "^4.0.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.4",
    "@types/three": "^0.158.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "raw-loader": "^4.0.2",
    "rimraf": "^5.0.10",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
